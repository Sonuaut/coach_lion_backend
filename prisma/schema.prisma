generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  password    String
  otp         String?
  is_verified Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  onboarding  UserOnboarding?
  userCheckins UserCheckin[]
  feedbacks   Feedback[]
  moods       Mood[]
}

model UserOnboarding {
  id             String   @id @default(uuid())
  userId         String   @unique
  focusArea      String?
  coachSelection String?
  coachAvatar    String?
  coachStyle     String?
  ageRange       String?
  gender         String?
  planType       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserCheckin {
  id        String   @id @default(uuid())
  userId    String
  date      String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
}

model Feedback {
  id        String   @id @default(uuid())
  userId    String
  message   String
  date      String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Mood {
  id        String   @id @default(uuid())
  userId    String
  mood      String
  note      String?
  date      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
}
