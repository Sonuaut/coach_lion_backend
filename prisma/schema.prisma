generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  password    String
  otp         String?
  is_verified Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userOnboardingSteps UserOnboardingStep[]
  userOnboardingStatus UserOnboardingStatus?
  userCheckins UserCheckin[]
  feedbacks   Feedback[]
  moods       Mood[]

  @@index([email])
}

model UserOnboardingStep {
  id              String   @id @default(uuid())
  userId          String
  onBoardingStep  Int

  focusArea       String?
  coachType       String?
  coachLook       String?
  coachStyle      String?
  ageRange        String?
  gender          String?
  planType        String?

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, onBoardingStep])
  @@index([userId])
}

model UserOnboardingStatus {
  userId                String   @id
  isOnBoardingCompleted Boolean  @default(false)

  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model UserCheckin {
  id        String   @id @default(uuid())
  userId    String
  date      String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
}

model Feedback {
  id        String   @id @default(uuid())
  userId    String
  message   String
  date      String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Mood {
  id        String   @id @default(uuid())
  userId    String
  mood      String
  note      String?
  date      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
}
